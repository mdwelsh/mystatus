<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".CreateEventActivity" >
    
    <TextView
    	android:id="@+id/activity_title_prompt"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:text="@string/activity_title"
    	android:textAppearance="?android:attr/textAppearanceMedium" />
    
    <EditText
        android:id="@+id/set_activity_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:prompt="@string/activity_title" />
    
    <TextView
		android:id="@+id/activity_date"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/activity_date"
		android:textAppearance="?android:attr/textAppearanceMedium" />

	<Button
		android:id="@+id/activity_date_button"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/pick_date" />

	<TextView
       	android:id="@+id/activity_start_time"
       	android:layout_width="wrap_content"
       	android:layout_height="wrap_content"
       	android:text="@string/activity_start_time_prompt"
       	android:textAppearance="?android:attr/textAppearanceMedium" />

	<Button
    	android:id="@+id/activity_time_start"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:text="@string/pick_time" />
   	
    <TextView
       	android:id="@+id/activity_end_time"
       	android:layout_width="wrap_content"
       	android:layout_height="wrap_content"
       	android:text="@string/activity_end_time_prompt"
       	android:textAppearance="?android:attr/textAppearanceMedium" />

	<Button
    	android:id="@+id/activity_time_end"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:text="@string/pick_time" />
    	
    <Button
    	android:id="@+id/finalize_event"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:text="@string/finalize_event" />

</LinearLayout>